= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :order_date
    = f.datetime_select :order_date
  .field
    = f.label :delivery_info_id
    = f.number_field :delivery_info_id
  .field
    = f.label :delivery_date
    = f.date_select :delivery_date
  .field
    = f.label :time_range_id
    = f.number_field :time_range_id
  .field
    = f.label :settelment_charge
    = f.number_field :settelment_charge
  .field
    = f.label :delivery_charge
    = f.number_field :delivery_charge
  .actions
    = f.submit 'Save'
